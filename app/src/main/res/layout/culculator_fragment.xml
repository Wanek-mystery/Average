<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/culcLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="56"
            android:orientation="vertical"
            android:weightSum="100">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvScore"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:text="0.0"
                android:elevation="5dp"
                android:textColor="#fff"
                android:textSize="50sp"
                android:textAlignment="center"
                app:autoSizeTextType="uniform"
                android:layout_marginBottom="3dp" />

            <View
                android:id="@+id/line1"
                android:layout_width="3dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvForFive"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:text="Для исправления на 5-ку нужно:"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textAlignment="center"
                app:autoSizeTextType="uniform"
                android:padding="8dp"
                android:gravity="center_vertical|center_horizontal"
                android:visibility="invisible"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCountFiveForFive"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:padding="5dp"
                android:text="3 пятерки"
                android:textColor="#8CB78B"
                android:textSize="20sp"
                app:autoSizeTextType="uniform"
                android:textAlignment="center"
                android:visibility="invisible"/>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="invisible"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvForFour"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:padding="8dp"
                android:text="Для исправления на 4-ку нужно:"
                app:autoSizeTextType="uniform"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center_vertical|center_horizontal"
                android:visibility="invisible"/>

            <LinearLayout
                android:id="@+id/layourBottom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="13"
                android:orientation="horizontal"
                android:weightSum="100"
                android:visibility="visible">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCountFiveForFour"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:padding="3dp"
                    android:text="3 пятерки"
                    app:autoSizeTextType="uniform"
                    android:textColor="#8CB78B"
                    android:textSize="20sp"
                    android:textAlignment="center"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvOr"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text="или"
                    android:padding="4dp"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    app:autoSizeTextType="uniform"
                    android:textAlignment="center"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCountFourForFour"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="5 четверок"
                    android:padding="3dp"
                    app:autoSizeTextType="uniform"
                    android:textColor="#8CB78B"
                    android:textSize="20sp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="invisible"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="35"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="26"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDown"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:text="Стереть"
                    android:textSize="20sp"
                    android:layout_marginRight="9dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="8dp"
                    android:textColor="#fff"
                    android:gravity="center_vertical|center_horizontal"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:layout_marginRight="9dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginBottom="10dp"
                    android:text="Сбросить"
                    android:textSize="20sp"
                    android:elevation="8dp"
                    android:textColor="#fff"
                    android:gravity="center_vertical|center_horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="37"
                android:weightSum="100"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="50"
                    android:text="5"
                    android:textSize="50sp"
                    android:elevation="5dp"
                    android:translationZ="2dp"
                    app:autoSizeTextType="uniform"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#fff"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="50"
                    android:text="4"
                    android:textSize="50sp"
                    android:elevation="5dp"
                    android:translationZ="2dp"
                    app:autoSizeTextType="uniform"
                    android:textColor="#fff"
                    android:gravity="center_vertical|center_horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="37"
                android:weightSum="100"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="50"
                    android:text="3"
                    app:autoSizeTextType="uniform"
                    android:textSize="50sp"
                    android:elevation="5dp"
                    android:translationZ="2dp"
                    android:textColor="#fff"
                    android:gravity="center_vertical|center_horizontal"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/button_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:layout_margin="3dp"
                    app:autoSizeTextType="uniform"
                    android:text="2"
                    android:elevation="5dp"
                    android:translationZ="2dp"
                    android:textSize="50sp"
                    android:textColor="#fff"
                    android:gravity="center_vertical|center_horizontal"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="45dp"></View>

    </LinearLayout>

    <ImageView
        android:id="@+id/view1"
        android:layout_width="36dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="8dp"
        android:elevation="15dp"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.45999998"
        app:srcCompat="@drawable/left">

    </ImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/view2"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:background="@drawable/notes"
        android:elevation="15dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#fff"
        ads:layout_constraintBottom_toBottomOf="@+id/view1"
        ads:layout_constraintStart_toEndOf="@+id/view1"
        ads:layout_constraintTop_toTopOf="@+id/view1"
        app:autoSizeTextType="uniform"
        app:layout_constraintVertical_bias="0.52">

    </androidx.appcompat.widget.AppCompatTextView>

</androidx.constraintlayout.widget.ConstraintLayout>